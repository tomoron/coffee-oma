.ui.middle.aligned.center.aligned.grid.vertical.stripe
  .column style= "width: 543px"
    h1.content アイテムを登録する
    = form_with url: new_product_path, method: :get, class: "ui mini form text-left", local: true do |f|
      .field
        = f.label :keyword, '検索ワード'
        br
        .ui.left.icon.input
          i.search.icon
          = f.text_field :keyword, placeholder: "search",class: ""
      .field
        = f.submit 'search', class: "ui fluid teal submit button "
- if @products.present?
  .ui.three.stackable.cards.segment#example1
    .ui.right.very.close.rail
      .ui.segment.sticky
        a href="#"
          i.chevron.circle.up.icon Top
    - @products.first(10).each do |product|
      .ui.fluid.card
        .image
          img src="#{product.medium_image_urls[0]}"
        .content
          .herader =product.name
          .meta
            span Brand:  #{product.shop_name}
          .description
            =product.catchcopy
        = form_with model: @product,url: products_path, local: true do |f|
          =f.hidden_field(:itemname, :value => product.name)
          =f.hidden_field(:itemprice, :value => product.price)
          =f.hidden_field(:shopname, :value => product.shop_name)
          =f.hidden_field(:catchcopy, :value => product.catchcopy)
          =f.hidden_field(:imageurl, :value => product.medium_image_urls[0])
          =f.hidden_field(:itemurl, :value => product.url)
          =f.hidden_field(:itemcaption, :value => product.caption)
          =f.submit "登録する", class: "ui fluid teal submit button"
        .extra.content
          i.yen.sign.icon =product.price.to_s(:delimited)
