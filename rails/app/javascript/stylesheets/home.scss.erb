#top-image {
  background-image: url("<%=asset_path('coffee-back.jpg')%>");
  background-size: cover;
  background-position: center;
  color: white;
  padding: 17% 0%;
}

#back-image{
  background-image: url("<%=asset_path('main-image.jpg')%>");
  background-position: left;
  background-attachment: fixed;
  background-repeat: no-repeat;
  min-height: 100vh;
}

.ml5 {
  position: relative;
  font-weight: 300;
  font-size: 7em;
  color: white;
}

.ml5 .text-wrapper {
  position: relative;
  display: inline-block;
  padding-top: 0.1em;
  padding-right: 0.05em;
  padding-bottom: 0.15em;
  line-height: 1em;
}

.ml5 .line {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 3px;
  width: 100%;
  background-color: white;
  transform-origin: 0.5 0;
}

.ml5 .ampersand {
  font-family: Baskerville, serif;
  font-style: italic;
  font-weight: 400;
  width: 1em;
  margin-right: -0.1em;
  margin-left: -0.1em;
  padding-lett: 15px;
}

.ml5 .letters {
  display: inline-block;
  opacity: 0;
}
