.ui.grid
  .column
    - breadcrumb :news
    = breadcrumbs separator: " > " ,class: 'ui breadcrumb', fragment_class: 'section', current_class: 'active'

.ui.middle.aligned.center.aligned.grid
  .eleven.wide.column
    = form_with model: @news, class: "ui segment form", id: "edit_form", method: :put, local: true do |f|
      .field
        h3=f.text_field :title , placeholder: "title",id: "title",class: "aligned center content"
        .ui.divider
        .text-left.mt-3rem
          =f.rich_text_area :content, placeholder: "内容",id: "content"
        .ui.error.message
      .field
        = f.submit 'submit', class: "large ui center floated positive button"
    .segment
