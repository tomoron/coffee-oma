[
  {
    "name": "nginx",
    "image": "860542255954.dkr.ecr.ap-northeast-1.amazonaws.com/portfolio-nginx",
    "essential": true,
    "command": [
      "sudo",
      "/etc/init.d/nginx",
      "start"
    ],
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 80
      }
    ]
  },
  {
    "name": "rails",
    "image": "860542255954.dkr.ecr.ap-northeast-1.amazonaws.com/portfolio-rails:latest",
    "essential": true,
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "DB_HOST",
        "value": "portfolio-db.cr5zcaqhxjxz.ap-northeast-1.rds.amazonaws.com"
      },
      {
        "name": "DB_DATABASE",
        "value": "portfolio-db"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "rails",
        "awslogs-group": "/ecs/rails"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000
      }
    ]
  }
]
