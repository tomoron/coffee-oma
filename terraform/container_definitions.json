[
  {
    "name": "nginx",
    "image": "860542255954.dkr.ecr.ap-northeast-1.amazonaws.com/portfolio-nginx",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "nginx",
        "awslogs-group": "/ecs/nginx"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 80
      }
    ]
  },
  {
    "name": "rails",
    "image": "860542255954.dkr.ecr.ap-northeast-1.amazonaws.com/portfolio-rails:latest",
    "essential": true,
    "command": [
      "bundle",
      "exec",
      "unicorn_rails",
      "-E",
      "production",
      "-D"
    ],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "DB_HOST",
        "value": "portfolio-db.cr5zcaqhxjxz.ap-northeast-1.rds.amazonaws.com"
      },
      {
        "name": "DB_DATABASE",
        "value": "portfolio-db"
      },
      {
        "name": "SSM_ACTIVATION_CODE",
        "value": "Pl1ALx2boV5OCr9mnBOc"
      },
      {
        "name": "SSM_ACTIVATION_ID",
        "value": "5b711542-27f7-4f56-ac7e-30c1472ae9b3"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "rails",
        "awslogs-group": "/ecs/rails"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000
      }
    ]
  }
]
