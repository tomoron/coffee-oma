[
  {
    "name": "rails",
    "image": "${rails_image}",
    "essential": true,
    "entrypoint": ["entrypoint.sh"],
    "command": ["pumactl", "start"],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "ENV_FILE",
        "value": "${env_file}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "rails",
        "awslogs-group": "/ecs/rails"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000
      }
    ],
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl --unix-socket /usr/src/coffee-oma/tmp/sockets/puma.sock ./",
        "|| exit 1"
      ],
      "startPeriod": 15
    }
  },
  {
    "name": "nginx",
    "image": "${nginx_image}",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "nginx",
        "awslogs-group": "/ecs/nginx"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 80
      }
    ],
    "volumesFrom": [
      {
        "sourceContainer": "rails",
        "readOnly": true
      }
    ],
    "dependsOn": [
      {
        "condition": "HEALTHY",
        "containerName": "rails"
      }
    ]
  }
]
